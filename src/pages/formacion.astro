---
import Main from "@layouts/Main.astro";
import Cover from "@components/Cover.astro";

export const name = "Formación";
export const term = "Formación Académica";
export const desc = "Formación académica y títulos complementarios como diseñador, anialista, programador y gestor de proyectos web";
export const menu = 3;
export const snap = '/misc/lautaro-andreani-UYsBCu9RP3Y-unsplash.jpg';
---
<Main class="main bg-primary bg-gradient bg-opacity-15" title={name+': '+term} description={desc}>
	<Cover src="/background.svg">
		<div class="container p-3">
			<div class="row">
				<div class="col-12 col-lg-4">
					<div class="position-lg-sticky" style="top: 25px; z-index: 1020;">
						<div class="text-center">
							<h1 class="h2 text-black text-uppercase mt-2 mb-3">
								{name}
							</h1>
						</div>
						<ul id="history" class="list-group">
							<li class="list-group-item d-flex flex-row justify-content-between align-items-start">
								<div class="display w-25">
										<span class="badge bg-black text-white me-2 w-100 text-truncate">2024 · 2025</span><br/>
										<span class="badge bg-white text-primary me-2 w-100">CURSO</span>
								</div>
								<div class="title w-100 px-2">
										<strong class="text-black">Desarrollo Web FRONTEND</strong><br/>
										<small class="text-black">Astro (2025)</small>
										<small class="text-black">React (2024)</small>
										<small class="text-black">Angular (2024)</small>
								</div>
								<a class="list-group-item-action align-self-center" href="#frontend" title="Director Técnico de MasWeb.ES - Tecnología en la Nube">
									<span class="bi bi-arrow-down-circle-fill d-inline d-md-none fs-3"></span>
									<span class="bi bi-arrow-right-circle-fill d-none d-md-inline fs-3"></span>
								</a>
							</li>
							<li class="list-group-item d-flex flex-row justify-content-between align-items-start">
								<div class="display w-25">
										<span class="badge bg-black text-white me-2 w-100 text-truncate">2013</span><br/>
										<span class="badge bg-white text-primary me-2 w-100">IFES</span>
								</div>
								<div class="title w-100 px-2">
										<strong class="text-black">Formador de Formadores</strong><br/>
										<strong class="text-black">Formador Presencial</strong>
								</div>
								<a class="list-group-item-action align-self-center" href="#profesor" title="Director Técnico de MasWeb.ES - Tecnología en la Nube">
									<span class="bi bi-arrow-down-circle-fill d-inline d-md-none fs-3"></span>
									<span class="bi bi-arrow-right-circle-fill d-none d-md-inline fs-3"></span>
								</a>
							</li>
							<li class="list-group-item d-flex flex-row justify-content-between align-items-start">
								<div class="display w-25">
										<span class="badge bg-black text-white me-2 w-100 text-truncate">2010</span><br/>
										<span class="badge bg-white text-primary me-2 w-100">UVA</span>
								</div>
								<div class="title w-100 px-2">
										<strong class="text-black">Ingeniero Técnico de Informática de Gestión</strong>
								</div>
								<a class="list-group-item-action align-self-center" href="#ingeniero" title="Profesor en Curso de Desarrollo Web para la academia IFES">
									<span class="bi bi-arrow-down-circle-fill d-inline d-md-none fs-3"></span>
									<span class="bi bi-arrow-right-circle-fill d-none d-md-inline fs-3"></span>
								</a>
							</li>
							<li class="list-group-item d-flex flex-row justify-content-between align-items-start">
								<div class="display w-25">
										<span class="badge bg-black text-white me-2 w-100 text-truncate">2003</span><br/>
										<span class="badge bg-white text-primary me-2 w-100">IES-MM</span>
								</div>
								<div class="title w-100 px-2">
										<strong class="text-black">Técnico Superior de Desarrollo de Aplicaciones Informáticas</strong>
								</div>
								<a class="list-group-item-action align-self-center" href="#tecnico" title="Desarrollador Web Freelance en OpenYourWeb del Grupo Almia">
									<span class="bi bi-arrow-down-circle-fill d-inline d-md-none fs-3"></span>
									<span class="bi bi-arrow-right-circle-fill d-none d-md-inline fs-3"></span>
								</a>
							</li>
							<li class="list-group-item d-flex flex-row justify-content-between align-items-start">
								<div class="display w-25">
										<span class="badge bg-black text-white me-2 w-100 text-truncate">2001</span><br/>
										<span class="badge bg-white text-primary me-2 w-100">CEASE</span>
								</div>
